{% extends 'base.html.twig' %}

{% block title %}Liste des Événements{% endblock %}

{% block body %}
<h1>Liste des Événements</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for evenement in evenements %}
        <tr>
            <td>{{ evenement.id }}</td>
            <td>{{ evenement.nom }}</td>
            <td>
                <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-info btn-sm">Voir</a>
                <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                <form method="post" action="{{ path('app_evenement_delete', {'id': evenement.id}) }}" style="display:inline-block;" onsubmit="return confirm('Voulez-vous vraiment supprimer cet événement ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}">
                    <button class="btn btn-danger btn-sm">Supprimer</button>
                </form>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">Aucun événement trouvé</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_evenement_new') }}" class="btn btn-success">Créer un nouvel événement</a>
{% endblock %}